{
	"name": "Boilerplate",
	"description": "Boilerplate: Node, Webpack, Isomorphic React, Less, Babel, Handlebars",
	"version": "1.1.0",
	"main": "./server.js",
	"author": "Fun Maker",
	"repository": "https://github.com/funmaker/webapp-boilerplate",
	"scripts": {
		"start": "rm -rf build && webpack --config webpack/server.dev.babel.js",
		"start:prod": "cd dist && npm start",
		"build:prod": "mkdir -p dist && npm-run-all build:prod-*",
		"build:prod-server": "webpack --config webpack/server.babel.js",
		"build:prod-client": "webpack --config webpack/client.babel.js",
		"build:prod-static": "cp -r static dist/",
		"build:prod-package": "babel-node webpack/package.babel.js"
	},
	"dependencies": {
		"axios": "^0.21.2",
		"body-parser": "latest",
		"colors": "latest",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"detect-node": "latest",
		"express": "^4.17.3",
		"express-handlebars": "^5.3.1",
		"express-promise-router": "^4.0.1",
		"morgan": "^1.10.0",
		"prop-types": "^15.7.2",
		"query-string": "^6.13.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-hot-loader": "^4.12.21",
		"react-router": "^5.2.0",
		"react-router-dom": "^5.2.0",
		"semantic-ui-react": "^0.88.2",
		"source-map-support": "^0.5.19"
	},
	"devDependencies": {
		"@babel/core": "^7.10.5",
		"@babel/node": "^7.10.5",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-decorators": "^7.10.5",
		"@babel/plugin-proposal-object-rest-spread": "^7.10.4",
		"@babel/polyfill": "^7.10.4",
		"@babel/preset-env": "^7.10.4",
		"@babel/preset-react": "^7.10.4",
		"@babel/register": "^7.10.5",
		"babel-loader": "^8.1.0",
		"css-loader": "^3.6.0",
		"handlebars": "^4.7.7",
		"handlebars-loader": "^1.7.1",
		"mini-css-extract-plugin": "^0.9.0",
		"node-sass": "^7.0.0",
		"npm-run-all": "^4.1.5",
		"sass-loader": "^9.0.2",
		"start-server-webpack-plugin": "^2.2.5",
		"style-loader": "^1.2.1",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12",
		"webpack-dev-middleware": "^3.7.2",
		"webpack-hot-middleware": "^2.25.3",
		"webpack-node-externals": "^2.5.0"
	},
	"port": 3900
}
